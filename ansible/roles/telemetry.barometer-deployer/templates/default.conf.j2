Hostname "{{ ansible_fqdn }}"
Interval {{ barometer_interval }}

{% for plugin in plugins %}
LoadPlugin {{ plugin }}
{% endfor %}

<Plugin df>
  ValuesPercentage true
</Plugin>

<Plugin intel_rdt>
  Interval 1
</Plugin>

<Plugin ipmi>
  Username {{ barometer_plugin_ipmi_username }}
  Password {{ barometer_plugin_ipmi_password }}
</Plugin>

<Plugin virt>
  Connection "qemu:///system"
  RefreshInterval {{ barometer_plugin_virt_refreshinterval }}
  HostnameFormat {{ barometer_plugin_virt_hostnameformat }}
  PluginInstanceFormat {{ barometer_plugin_virt_plugininstanceformat }}
  ExtraStats "{{ barometer_plugin_virt_extrastats }}"
</Plugin>
